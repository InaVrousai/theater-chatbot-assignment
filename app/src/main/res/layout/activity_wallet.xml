<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/showName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Παράσταση: Οιδίπους Τύραννος"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/showDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ημερομηνία/Ώρα: Δευτέρα, 10 Ιουνίου 2025 – 18:00"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:gravity="start"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/showSeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Θέσεις: A12, A13"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:gravity="start"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/holderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Κάτοχος: Κωνσταντίνος Παπαδόπουλος"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:gravity="start"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/ticketCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Κωδικός Εισιτηρίου: ABCD1234"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:gravity="start"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/cancelCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Κωδικός Ακύρωσης: 12345"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:gravity="start"
                    android:layout_marginTop="8dp"/>

                <ImageView
                    android:id="@+id/barcodeImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_barcode_placeholder" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Εμφανίστε το barcode στην είσοδο"
                    android:textSize="14sp"
                    android:textColor="#777777"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
